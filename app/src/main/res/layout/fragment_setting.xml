<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="34.7dp"
                android:letterSpacing="0.05"
                android:text="설정"
                android:textColor="#ffffff"
                android:textSize="18.3sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ImageView
            android:layout_width="91.3dp"
            android:layout_height="91.3dp"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="82.7dp"
            android:src="@mipmap/user" />

        <TextView
            android:id="@+id/setting_text_userDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="164dp"
            android:layout_marginTop="102dp"
            android:letterSpacing="0.05"
            android:text="박진주의 디바이스"
            android:textColor="#ffffff"
            android:textSize="15.7sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/setting_text_Battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="164dp"
            android:layout_marginTop="129.7dp"
            android:letterSpacing="0.05"
            android:text="배터리 잔량"
            android:textColor="#4f4f4f"
            android:textSize="18.3sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/setting_text_battery_remain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="129.7dp"
            android:layout_toRightOf="@id/setting_text_Battery"
            android:letterSpacing="0.05"
            android:text="100%"
            android:textColor="#5378fe"
            android:textSize="18.3sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_layout"
            android:layout_marginLeft="16.7dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="75.3dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/setting_layout_user_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/setting_img_bar_chart"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="16.7dp"
                    android:src="@mipmap/inform" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/setting_img_bar_chart"
                    android:letterSpacing="0.05"
                    android:text="사용자 정보"
                    android:textColor="#4f4f4f"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_layout_user_group"
                android:layout_marginStart="37dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="27.3dp"
                    android:layout_height="26.7dp"
                    android:src="@mipmap/name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="44.3dp"
                    android:letterSpacing="0.05"
                    android:text="이름"
                    android:textColor="#172c54"
                    android:textSize="15.3sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/setting_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="151.3dp"
                    android:letterSpacing="0.05"
                    android:text="디폴트"
                    android:textColor="#4f4f4f"
                    android:textSize="15.7sp" />

                <ImageView
                    android:layout_width="27.3dp"
                    android:layout_height="26.7dp"
                    android:layout_below="@id/setting_user_id"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/call" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_user_id"
                    android:layout_marginLeft="44.3dp"
                    android:layout_marginTop="20dp"
                    android:letterSpacing="0.05"
                    android:text="연락처"
                    android:textColor="#172c54"
                    android:textSize="15.3sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/setting_user_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_user_id"
                    android:layout_marginLeft="151.3dp"
                    android:layout_marginTop="20dp"
                    android:letterSpacing="0.05"
                    android:text="000-000-0000"
                    android:textColor="#4f4f4f"
                    android:textSize="15.7sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/setting_layout_setting_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_setting_chart"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="16.7dp"
                    android:src="@mipmap/settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/setting_img_bar_chart"
                    android:letterSpacing="0.05"
                    android:text="설정"
                    android:textColor="#4f4f4f"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_layout_user_group"
                android:layout_marginStart="37dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@mipmap/message" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="44.3dp"
                    android:letterSpacing="0.05"
                    android:text="메시지 전송 기능"
                    android:textColor="#172c54"
                    android:textSize="15.3sp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/setting_msg_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="27dp" />


                <LinearLayout
                    android:id="@+id/setting_message_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_msg_switch"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@mipmap/alert" />

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/setting_msg_alert_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/setting_msg_switch"
                        android:layout_marginLeft="10dp"
                        android:letterSpacing="0.05"
                        android:text="메시지 알림 설정"
                        android:textColor="#172c54"
                        android:textSize="15.3sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/setting_bluetooth_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_message_layout"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/reset" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:letterSpacing="0.05"
                        android:text="블루투스 재설정"
                        android:textColor="#172c54"
                        android:textSize="15.3sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/setting_btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="46.7dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="#85a0b8"
                    android:text="저 장 하 기"
                    android:textColor="#ffffff"
                    android:textSize="18.7sp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>