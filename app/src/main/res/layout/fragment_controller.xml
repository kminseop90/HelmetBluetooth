                <TextView
                    android:layout_width="15.7dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="44.3dp"
                    android:gravity="center"
